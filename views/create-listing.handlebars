<div class="page-container">
  <div class="login-card">
    {{#if loggedIn}}
      <h2>Create New Listing</h2>
      <form id="new-post-form" class="card-body">
        <div class="input-section">
          <label class="form-label" for="post-title">Title:</label>
          <input
            type="text"
            name="post-title"
            id="item-title"
            class="form-input"
            placeholder="enter title"
          />
        </div>

        <div class="input-section">
          <label class="form-label" for="post-desc">Description:</label>
          <textarea
            rows="3"
            name="post-desc"
            class="form-input"
            id="item-description"
            aria-valuemax="maxiumum 300 characters"
          ></textarea>
        </div>

        <div class="input-section">
          <label class="form-label" for="post-location">Location:</label>
          <input
            name="post-location"
            class="form-input"
            id="item-Location"
            placeholder="zip code"
            aria-valuemax="maxiumum 5 characters"
          />
        </div>

        <div class="input-section">
          <p>Add an item image:</p>
          <button class="cloudinary-button" id="search">Search File</button>
        </div>

        <div class="input-section">
          <label class="form-label" for="post-category">Choose category</label>
          <select id="category-select" name="post-category">
            {{#each categories as |category|}}
              <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>

        <button id="create-btn" type="submit" class="btn primary-btn">Create
          Listing</button>
      </form>
    {{else}}
      <p>Log in to post an item!</p>
    {{/if}}
  </div>
</div>

<script
  src="https://upload-widget.cloudinary.com/global/all.js"
  type="text/javascript"
></script>
<script src="/js/create.js"></script>